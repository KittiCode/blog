= form_for @post, html: {multipart: true} do |f|
	-if @post.errors.any?
		#errors
			#errors
				%h2
					= pluralize(@post.errors.count, "error") 
					prevented this post from saving
				%ul
				- @post.errors.full_messages.each do |msg|
					%li= msg

	= f.label :image
	%br
	%br
	= f.file_field :image
	%br
	%br
	= f.label :title 
	%br
	= f.text_field :title
	%br
	= f.label :content
	%br
	= f.text_area :content
	%br
	%br
	= f.submit