#post_content
	%h1{class: "title"}
		=@post.title
	submited
	%b{class: "date"}
		= time_ago_in_words(@post.created_at)
	ago 
	- if @post.user == current_user
		|
		= link_to 'Edit', edit_post_path(@post)
		|
		= link_to 'Delete', post_path(@post), method: :delete, data: { confirm: "Are you sure?"}
		%p{class: "body"} 
		=@post.content

	
	#comments
		%h2
			= @post.comments.count
			Comments
		= render @post.comments

		%h3 Add a comment:
		= render "comments/form"
